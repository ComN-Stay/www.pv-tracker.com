{% extends 'base.html.twig' %}

{% block title %}Modifier une relève{% endblock %}

{% block stylesheets %}
    {{ include('account/_assets/_calendar_css.html.twig') }}
{% endblock %}

{% block body %}
    <h1>Modifier une relève</h1>

    {{ include('account/energy/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="d-flex">
        <a class="btn btn-info btn-lg" href="{{ path('app_energy_index') }}">Toutes les relèves</a>
        {{ include('account/energy/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block javascripts %}
	{{ include('account/_assets/_calendar_js.html.twig') }}
    <script>
        $(document).on('click', '._getDate', function(e){
            e.preventDefault();
            let date = $(this).data('date');
            $('.day.active').removeClass('active');
            $(this).parent().addClass('active');
            $('#energy_date').val(date)
        });
    </script>
{% endblock %}
