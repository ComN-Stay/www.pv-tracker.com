{% extends 'base.html.twig' %}

{% block title %}Prices{% endblock %}

{% block body %}
    <h1>Prices</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prices.id }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{{ prices.dateStart ? prices.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ prices.type }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ prices.amount }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ prices.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_prices_index') }}">back to list</a>

    <a href="{{ path('app_prices_edit', {'id': prices.id}) }}">edit</a>

    {{ include('prices/_delete_form.html.twig') }}
{% endblock %}
